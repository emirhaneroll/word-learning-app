<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.wordlearning.controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Kelime Öğrenme Uygulaması" style="-fx-font-size: 24px;"/>
    
    <TextField fx:id="usernameField" promptText="Kullanıcı Adı"/>
    <PasswordField fx:id="passwordField" promptText="Şifre"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Giriş Yap" onAction="#handleLogin"/>
        <Button text="Kayıt Ol" onAction="#handleRegister"/>
    </HBox>
    
    <Hyperlink text="Şifremi Unuttum" onAction="#handleForgotPassword"/>
</VBox> 