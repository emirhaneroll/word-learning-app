<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.wordlearning.controller.ForgotPasswordController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Şifre Sıfırlama" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    
    <TextField fx:id="usernameField" promptText="Kullanıcı Adı"/>
    <PasswordField fx:id="newPasswordField" promptText="Yeni Şifre"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Yeni Şifre (Tekrar)"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Şifreyi Sıfırla" onAction="#handleResetPassword"/>
        <Button text="Geri Dön" onAction="#handleBack"/>
    </HBox>
</VBox> 